<div class="form--field -required"><%= f.text_field :identifier, :required => true %></div>
<div class="form--field -required"><%= f.text_field :date, :size => 10, :required => true %>
  <% if license.new_record? %>
    <%= calendar_for('license_versions_attributes_0_date') %>
  <% else %>
    <%= calendar_for('license_version_date') %>
  <% end %>
</div>
<div class="form--field"><%= f.text_field :authors %></div>
<div class="form--field"><%= f.text_field :url %></div>

<div class="form--field">
  <label class="form--label" for="license_version_text"><%= t(:text) %></label>
  <span class="form--field-container">
    <span class="form--text-area-container">
      <%
        name, value =
          if @license_version
            ['license_version[text]', @license_version['text']]
          else
            ['license[versions_attributes][0][text]', nil]
          end
      %>
      <%= text_area_tag name, value, :cols => 100, :rows => 25, :class => 'wiki-edit', :accesskey => accesskey(:edit) %>
      <%= wikitoolbar_for 'license_version_text' %>
    </span>
  </span>
</div>
